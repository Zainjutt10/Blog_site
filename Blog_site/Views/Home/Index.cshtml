@using Assignment03.Models
@model Login
<html>
<head>
    <title>Login</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <form method="post" class="login" action="Home">
        <div asp-validation-summary="All"></div>
        <div class="form-group">
            <label for="exampleInputEmail1">Name</label>
            <input type="text" class="form-control" id="Name1" aria-describedby="NameHelp" asp-for="Name" placeholder="Enter Name">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" class="form-control" id="exampleInputPassword1" asp-for="Password" placeholder="Password">
        </div>

        <button  type="submit" class="btn btn-primary">Login</button>
        <button type="submit" asp-action="Display" class="btn-dark">Visit US</button>
    </form>
</body>
</html>